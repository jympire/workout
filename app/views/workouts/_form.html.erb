<%= simple_form_for(@workout) do |f| %>
  <%= f.input :date, label: "Date" %>
  <%= f.input :workout, label: "What was the focus of today's workout?", input_html: { class: "form-control" } %>
  <%= f.input :mood, label: "How were you feeling during the workout?", input_html: { class: "form-control" } %>
  <%= f.input :length, label: "How long was the workout?", input_html: { class: "form-control" } %>
  <br/>
  <%= f.button :submit, { class: "btn btn-save" } %>
<% end %>